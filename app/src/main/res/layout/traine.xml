<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/train" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Menu_Train"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

            </LinearLayout>








            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioGroup
                    android:orientation="horizontal"
                    android:id="@+id/RadioTrainWays"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twoway"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/twoway" />


                    <RadioButton

                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/oneway"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/oneway" />

                </RadioGroup>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Compartment"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/sex_txt"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Sex"
                        android:textColor="@color/colorText"
                        android:textSize="20sp" />


                    <Spinner
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:background="@drawable/drop"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:id="@+id/sexspinner" />




                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toCity_txt"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ToCity"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/fromeCity_txt"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/FromCity"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Spinner
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:background="@drawable/drop"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/SpinnerToCityName" />

                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/SpinnerFromCityName"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:background="@drawable/drop"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/return_txt"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/returndate"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/goon_txt"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/goon"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/returndate_etxt"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_texts"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/goon_etxt"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_texts"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />


            </LinearLayout>




                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >





                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/txt_Veteran"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="@string/Veteran" />

                            <Button
                                android:id="@+id/btn_veteran_plus"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/counter_plus"
                                android:background="@drawable/buttons_back"/>

                            <TextView
                                android:id="@+id/txt_veteran_value"
                                android:textColor="@android:color/black"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:background="@drawable/edit_texts"
                                android:text="0" />

                            <Button
                                android:id="@+id/btn_veteran_minus"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/counter_minus"
                                android:background="@drawable/buttons_back"/>

                        </LinearLayout>




                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/txt_Baby"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="@string/baby" />

                            <Button
                                android:id="@+id/btn_baby_plus"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/counter_plus"
                                android:background="@drawable/buttons_back"/>

                            <TextView
                                android:id="@+id/txt_baby_value"
                                android:textColor="@android:color/black"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:background="@drawable/edit_texts"
                                android:text="0" />

                            <Button
                                android:id="@+id/btn_baby_minus"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/counter_minus"
                                android:background="@drawable/buttons_back"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/txt_Child"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="@string/child" />

                            <Button
                                android:id="@+id/btn_child_plus"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/counter_plus"
                                android:background="@drawable/buttons_back"/>

                            <TextView
                                android:id="@+id/txt_child_value"
                                android:textColor="@android:color/black"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:background="@drawable/edit_texts"
                                android:text="0" />

                            <Button
                                android:id="@+id/btn_child_minus"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/counter_minus"
                                android:background="@drawable/buttons_back"/>

                        </LinearLayout>


                        <LinearLayout

                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_Adult"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:text="@string/adult" />

                            <Button
                                android:id="@+id/btn_adult_plus"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/counter_plus"
                                android:background="@drawable/buttons_back"/>

                            <TextView
                                android:id="@+id/txt_adult_value"
                                android:textColor="@android:color/black"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:background="@drawable/edit_texts"
                                android:text="1" />

                            <Button
                                android:id="@+id/btn_adult_minus"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/counter_minus"
                                android:background="@drawable/buttons_back"/>

                        </LinearLayout>




                    </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button

                    android:layout_margin="20dp"
                    android:id="@+id/search_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"

                    android:background="@drawable/buttons_back"
                    android:text="@string/search"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>