<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/back">


    <LinearLayout
        android:id="@+id/LinearImageStar"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/img_scenery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="فاصله"
            android:id="@+id/txt_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        >
    </LinearLayout>

    <LinearLayout

        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/LinearImageStar"
        android:layout_toLeftOf="@+id/LinearButtonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="چهل ستون"
                    android:id="@+id/txt_scenery_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="درباره چهل ستون"
                    android:id="@+id/txt_scenery_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearButtonLeft"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_hotelId"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:text="برو"
            android:id="@+id/Select_btn"
            android:background="@drawable/buttons_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/Txt_scenery_address"
        android:text="آدرس چهل ستون"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>